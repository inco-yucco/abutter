<h1>ユーザー</h1>
<%= link_to "するめの入荷", new_user_path %>

<div class="icon">
  <table>
    <tr>
      <th>id</th>
      <th>email</th>
      <th>name</th>
      <th>icon</th>
      <th>操作</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.email, user_path(user) %></td>
        <td><%= user.name %></td>
        <td><%= image_tag Icon.find(user.id).icon_image, size: "45x45" %></td>
        <td><%= link_to "編集", edit_user_path(user) %> | <%= link_to "削除", user_path(user), method: :delete, data: { confirm: "本当に削除しますか"} %></td>
      </tr>
    <% end %>
  </table>
</div>